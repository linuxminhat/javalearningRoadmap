package chuong1;

public class b30 {
	public static int number;
	public static int checkPerfectNumber(int number) {
		int sum=0;
		for(int numb=1;numb<number;numb++) {
			if(number%numb==0) {
				sum+=numb;
				if(sum==number) {
					return sum;
					System.out.println(sum+"is perfect numb");
					break;
				}
			}
		}
	 return -1;
	}
	public static void main(String[] args) {
		System.out.println(checkPerfectNumber(100)); 
		
	}

}
