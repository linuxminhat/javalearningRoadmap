package chuong3;

public class bai90_update {
	public static int n;
	public static int findingm(int n) {
		//1+2+3+4+5+6<20
		//expected : return 5 
		int i=0;
		int sum=0;
		//0<20
//		while(sum<n) {
			for(i=1;sum<n;i++) {
				sum+=i;
				//sum=0
				//i=1 -> sum=0<20 -> sum=1
				//i=2 -> sum=1<20 -> sum=3
				//i=3 -> sum=6<20 -> sum=6
				//i=4 ->
			}
//		}
		return i-1;
	}
	public static void main(String[] args) {
		System.out.println(findingm(20)); 
	}

}
