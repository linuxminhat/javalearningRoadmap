package arrays_hashing;

public class leetcode27_reviewing {
	/*
	 * Input: nums = [3,2,2,3], val = 3
	 * Output: 2, nums = [2,2,_,_]
	 */
	public int removeElement(int[] nums, int val) {
		int count=0;
        for(int i=0;i<nums.length ;) {
        	if(nums[i]==val) {
        		for(int k=i;k<=nums.length-2;k++) {
        			nums[k+1]=nums[k];
        			count++;
        		}
        		nums.length--;
        	}else {
        		++i;
        	}
        }
        return count;
    }

}
