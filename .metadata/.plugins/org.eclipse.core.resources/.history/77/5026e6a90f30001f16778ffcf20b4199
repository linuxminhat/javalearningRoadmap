package loops_finalexercise;

public class LCM {
	private int number1;
	private int number2;
	public int findingLCM(int number1, int number2) {
		this.number1 = number1;//6
		this.number2 = number2;//12
		if(number1<number2) {
			int divisors = 1;
			for(int i=1;i<=number1;i++) {//1 2 3 4 5 6 
				for( divisors = 1;divisors<=number1;divisors++) {
					divisors = number1%i;//1 2 3 	
				}				
			}
			return divisors;
		}
		
	}
	

}
