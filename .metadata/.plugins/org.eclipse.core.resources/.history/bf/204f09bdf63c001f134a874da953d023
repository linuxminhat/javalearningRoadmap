package chuong1;

public class b12 {
	public static int x;
	public static int n;
	public static int powerSeries(int x, int n) //x=2;n=3
	{
		//2 + 2*2 + 2*2*2 = 14 
		//2 + 2*2 + 2*2*2 + 2*2*2*2 = 30
		int power = x*1;//2 -> biến này luôn khởi tạo rồi nên bỏ qua một bước sum  
		int sum=2;
		for(int i=1;i<n;i++) {
			power*=power;
			sum+=power;
		}
		return sum;
	}
	public static void main(String[] args) {
		System.out.println(powerSeries(2,3));
	}

}
