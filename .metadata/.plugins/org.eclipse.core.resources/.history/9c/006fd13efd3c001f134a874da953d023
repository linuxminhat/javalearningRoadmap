package chuong1;

public class b30 {
	public static int number;
	public static boolean checkPerfectNumber(int number) {
		int sum=0;
		for(int numb=1;numb<number;numb++) {
			if(number%numb==0) {
				sum+=numb;
				if(sum==number) {
					return sum;
				}
			}
		}
		System.out.println("So"+number+"la so hoan thien");
	}
	public static void main(String[] args) {
		checkPerfectNumber(7);
		
	}

}
